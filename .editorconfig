root = true

[*]
charset = utf-8
end_of_line = lf

indent_style = space
indent_size = 2

trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,css,scss}]
quote_type = single

[*.{yml,yaml}]
quote_type = double

[*.{md,MD,markdown,MARKDOWN}]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false
ij_markdown_force_one_space_after_blockquote_symbol = false
max_line_length = 120

# Bugged options - you have to set them in IntelliJ Options
# ij_markdown_min_lines_around_block_elements = 0
# ij_markdown_max_lines_around_block_elements = 1

# TypeScript
[{*.ats,*.cts,*.mts,*.ts}]
indent_size = 2
quote_type = single
ij_typescript_spaces_within_imports = true
ij_typescript_spaces_within_object_literal_braces = true
ij_typescript_keep_simple_methods_in_one_line = true
